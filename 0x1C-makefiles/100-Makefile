CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
DEPS = $(SRC:.c=.d)

.PHONY: all clean check_header

$(NAME): $(OBJ)
	$(CC) $(value CFLAGS) $^ -o $@

-include $(DEPS)

check_header:
	@test -f m.h || (echo "Header file m.h is missing!" && exit 1)

all: | check_header $(NAME)

clean:
	$(RM) *~ *.swp $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
