CC = gcc
CFLAGS = -Wall -Werror -Wextra -pedantic
NAME = school
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
DEPS = $(SRC:.c=.d)

.PHONY: all clean oclean fclean re

$(NAME): $(OBJ)
	$(CC) $(value CFLAGS) $^ -o $@

-include $(DEPS)

all: m.h $(OBJ)

clean:
	$(RM) *~ *.swp $(NAME)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
